<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Node</th>
    <th>Original due</th>
    <th>Approved due</th>
    <th>Forecast due</th>
    <th>Original cost</th>
    <th>Approved cost</th>
    <th>Forecast cost</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.node.name %></td>
    <td><%= task.original_due %></td>
    <td><%= task.approved_due %></td>
    <td><%= task.forecast_due %></td>
    <td><%= task.original_cost %></td>
    <td><%= task.approved_cost %></td>
    <td><%= task.forecast_cost %></td>
    <td><%= task.notes %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

